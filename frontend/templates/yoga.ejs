    <script>
        // Global variables
        let detector;
        let poses = [];
        let animationId;
        let currentPose = 0;
        let poseTimer;
        let countdown = 30;
        let progress = 0;
        let videoStream;
        let modelLoaded = false;

        // Pose names
        const poseNames = ["T Pose", "Tree Pose", "Warrior Pose"];

        // DOM elements
        const videoElement = document.getElementById('videoElement');
        const outputCanvas = document.getElementById('outputCanvas');
        const ctx = outputCanvas.getContext('2d');
        const poseFeedback = document.getElementById('poseFeedback');
        const countdownElement = document.getElementById('countdown');
        const progressBar = document.querySelector('.progress-bar');
        const progressText = document.querySelector('.progress-text');
        const successAnimation = document.getElementById('success-animation');
        const instructionsBtn = document.getElementById('instructions-btn');
        const instructionsModal = document.getElementById('instructions-modal');
        const closeModal = document.getElementById('close-modal');
        const gameBtn = document.getElementById('game-btn');

        // Initialize the page
        document.addEventListener('DOMContentLoaded', function() {
            // Set up event listeners
            document.getElementById('start').addEventListener('click', startYogaTrainer);
            document.getElementById('stop').addEventListener('click', stopYogaTrainer);
            instructionsBtn.addEventListener('click', showInstructions);
            closeModal.addEventListener('click', hideInstructions);
            gameBtn.addEventListener('click', () => window.location.href = '/games');

            // Click outside modal to close
            instructionsModal.addEventListener('click', function(e) {
                if (e.target === instructionsModal) {
                    hideInstructions();
                }
            });

            // Load the pose detection model
            // loadModel();
        });

     

        // Set up camera
        async function setupCamera() {
            try {
                const stream = await navigator.mediaDevices.getUserMedia({
                    video: { width: 640, height: 480, facingMode: 'user' },
                    audio: false
                });
                videoElement.srcObject = stream;
                videoStream = stream;
                
                // Set canvas dimensions to match video
                videoElement.onloadedmetadata = () => {
                    outputCanvas.width = videoElement.videoWidth;
                    outputCanvas.height = videoElement.videoHeight;
                };
                
                return new Promise((resolve) => {
                    videoElement.onplaying = () => {
                        resolve(videoElement);
                    };
                });
            } catch (error) {
                console.error("Error accessing camera:", error);
                poseFeedback.textContent = "Could not access camera. Please ensure you've granted camera permissions.";
                return null;
            }
        }

        // Start yoga trainer
        async function startYogaTrainer() {
            if (!modelLoaded) {
                poseFeedback.textContent = "Model is still loading. Please wait...";
                return;
            }

            const video = await setupCamera();
            if (!video) return;

            poseFeedback.textContent = `Detecting ${poseNames[currentPose]}...`;
            startCountdown();
            detectPose(video);
        }

        // Stop yoga trainer
        function stopYogaTrainer() {
            if (animationId) {
                cancelAnimationFrame(animationId);
                animationId = null;
            }
            
            if (poseTimer) {
                clearInterval(poseTimer);
                poseTimer = null;
            }
            
            if (videoStream) {
                videoStream.getTracks().forEach(track => track.stop());
                videoElement.srcObject = null;
            }
            
            poseFeedback.textContent = "Pose detection stopped";
            countdown = 30;
            countdownElement.textContent = countdown;
        }

       
        // Start countdown timer
        function startCountdown() {
            if (poseTimer) clearInterval(poseTimer);
            
            countdown = 30;
            countdownElement.textContent = countdown;
            
            poseTimer = setInterval(() => {
                countdown--;
                countdownElement.textContent = countdown;
                
                // Update progress
                progress = ((30 - countdown) / 30) * 100;
                progressBar.style.width = `${progress}%`;
                progressText.textContent = `${Math.round(progress)}%`;
                
                if (countdown <= 0) {
                    clearInterval(poseTimer);
                    poseCompleted();
                }
            }, 1000);
        }

        // Pose completed successfully
        function poseCompleted() {
            // Show success animation
            successAnimation.style.display = "block";
            
            // Update feedback
            poseFeedback.textContent = `Congratulations! ${poseNames[currentPose]} completed successfully!`;
            poseFeedback.style.color = "green";
            
            // Move to next pose or complete
            setTimeout(() => {
                successAnimation.style.display = "none";
                
                if (currentPose < 2) {
                    currentPose++;
                    poseFeedback.textContent = `Now try the ${poseNames[currentPose]}`;
                    startCountdown();
                } else {
                    poseFeedback.textContent = "All poses completed! You can now access the games.";
                    progressBar.style.width = "100%";
                    progressText.textContent = "100%";
                    
                    // Enable game button
                    gameBtn.style.display = "inline-block";
                }
            }, 3000);
        }

        // Show instructions modal
        function showInstructions() {
            instructionsModal.classList.add('active');
            document.body.style.overflow = 'hidden';
        }

        // Hide instructions modal
        function hideInstructions() {
            instructionsModal.classList.remove('active');
            document.body.style.overflow = 'auto';
        }

        // Back to top button functionality
        $(document).ready(function() {
            // Sticky navbar
            $(window).scroll(function() {
                if($(this).scrollTop() > 100) {
                    $('.navbar-area').addClass('sticky');
                } else {
                    $('.navbar-area').removeClass('sticky');
                }
                
                // Back to top button
                if ($(this).scrollTop() > 300) {
                    $('.back-to-top').addClass('active');
                } else {
                    $('.back-to-top').removeClass('active');
                }
            });
            
            $('.back-to-top').click(function(e) {
                e.preventDefault();
                $('html, body').animate({scrollTop: 0}, '300');
            });
        });
    </script>

