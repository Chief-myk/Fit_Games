        @media (max-width: 991px) {
            .section-title .title {
                font-size: 36px;
            }
            
            .navbar-collapse {
                background: rgba(0,0,0,0.95);
                padding: 20px;
                border-radius: 10px;
                margin-top: 15px;
            }
            
            .nav-link {
                padding: 10px 0 !important;
                margin: 5px 0;
            }
            
            .poses {
                flex-direction: column;
                align-items: center;
            }
            
            .pose1, .pose2, .pose3 {
                max-width: 100%;
            }
        }
        
        @media (max-width: 767px) {
            .section-title .title {
                font-size: 32px;
            }
            
            .counter {
                font-size: 40px;
            }
            
            .navbar-collapse {
                background-color: #FFAD00 !important;
            }
            
            .CameraVid {
                padding: 20px;
            }
            
            .timer {
                font-size: 36px;
            }
        }
        
        @media (max-width: 575px) {
            .section-title .title {
                font-size: 28px;
            }
            
            .navbar-area {
                background-color: #FFAD00;
            }
            
            .buttons {
                flex-direction: column;
                gap: 10px;
            }
            
            .btn {
                width: 100%;
            }
            
            .timer {
                font-size: 32px;
            }
            #svgg{
                display: none;
            }
        }
    </style>
</head>

